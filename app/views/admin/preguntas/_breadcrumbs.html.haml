#breadcrumbs
  %ul#crumbs
    %li
      = link_to 'Panel Control', admin_dashboard_path
    %li
      = link_to 'Preguntas', admin_preguntas_path
    - if @forview
      - if @forview == "NEW"
        %li= t("data.title_new")
      - elsif @forview == "EDIT"
        %li= t("data.title_edit")
      - else
        %li= t("data.title_show")
.clear &nbsp;
